<% include _layouts/header %>
    <div class="row">
        <h1 class="page-header"><%=product.title%></h1>
        <div class="col-md-5">
            <img src="/product_images/<%=product.id %>/<%=product.image %>" alt="" class="product-detail-image"><br>
        </div>
        <div class="col-md-7">
            <p><%= product.description %></p>
            <p><%= parseFloat(product.price).toFixed(2) %></p>
            <p><a href="/cart/add/<%=product.slug %>">Add To Cart</a></p>
        </div>
        <div class="col-xs-12">
            <ul class="gallery">
                <% galleryImages.forEach(function(image){ %> 
                    <%  if(image != "thumbs") { %> 
                        <li>
                            <a data-fancybox="gallery" href="/product_images/<%= product.id %>/gallery/<%= image %>">
                                <img src="/product_images/<%= product.id %>/gallery/thumbs/<%= image %>" alt="">
                            </a>
                        </li>
                    <% } %>
                <% }) %>
            </ul>
        </div>
    </div>
<% include _layouts/footer %>